{
  "name": "@plugnplay/websockets",
  "version": "1.0.0",
  "description": "Type-safe plug-and-play WebSocket architecture with session management and search capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bojidaryovchev/plug-n-play-ws.git"
  },
  "homepage": "https://github.com/bojidaryovchev/plug-n-play-ws#readme",
  "bugs": {
    "url": "https://github.com/bojidaryovchev/plug-n-play-ws/issues"
  },
  "keywords": [
    "websockets",
    "typescript",
    "nextjs",
    "react",
    "session-management",
    "real-time",
    "search",
    "redis",
    "upstash",
    "edge-ngram",
    "type-safe",
    "plug-and-play"
  ],
  "author": "bojidaryovchev",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "docs",
    "examples"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "next": ">=12.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
